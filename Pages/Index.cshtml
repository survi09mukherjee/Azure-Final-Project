    <style>
        /* Dark Gradient Background */
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(135deg, #1b1b1b, #2e2e2e, #3f3f3f);
            color: white;
            text-align: center;
            margin: 0;
            padding: 0;
        }

        /* Header Section */
        .text-center {
            margin-bottom: 20px;
        }

        /* Navigation Bar */
        .navbar {
            display: flex;
            justify-content: center;
            gap: 20px;
            padding: 15px 0;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(5px);
            border-bottom: 2px solid rgba(255, 255, 255, 0.2);
        }

        .navbar a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .navbar a:hover {
            background: rgba(255, 255, 255, 0.2);
        }

        /* Main Container */
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            flex-direction: column;
        }

        /* Card Styles */
        .card {
            display: flex;
            flex-direction: row;
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 80%;
            max-width: 900px;
            backdrop-filter: blur(10px);
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: scale(1.02);
        }

        /* Left Section */
        .left {
            flex: 1;
            text-align: center;
            padding: 20px;
        }

        .profile-icon {
            font-size: 40px;
        }

        .profile-name {
            font-size: 24px;
            font-weight: bold;
            margin-top: 10px;
        }

        .skills {
            margin-top: 10px;
        }

        .skill-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.3);
            padding: 5px 10px;
            margin: 5px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .skill-badge:hover {
            background: rgba(255, 255, 255, 0.5);
        }

        /* Right Section */
        .right {
            flex: 1.5;
            text-align: left;
            padding: 20px;
        }

        h3 {
            margin-bottom: 10px;
            text-decoration: underline;
        }

        .projects span,
        .achievements p {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            padding: 5px 10px;
            margin: 5px;
            border-radius: 5px;
            transition: background 0.3s ease;
        }

        .projects span:hover,
        .achievements p:hover {
            background: rgba(255, 255, 255, 0.4);
        }

        /* Portfolio Button */
        .portfolio-btn {
            display: inline-block;
            background: yellow;
            color: black;
            padding: 10px 15px;
            margin-top: 15px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
            transition: background 0.3s ease;
        }

        .portfolio-btn:hover {
            background: orange;
        }

    </style>
</head>
